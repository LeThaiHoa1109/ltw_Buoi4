*{	
	font-family: Tahoma;
	font-size: 11pt;
}

th{
	font-size: 13pt;
	background: #ff0000;
	color: #ffffff
}

table{
	border: 1px solid #ff0000;
	border-collapse: collapse;
	background: url(images/bgbottom_yellow.jpg) repeat-x left bottom;
}

td{
	padding: 5px;
}

input{
	padding: 5px;
	width: 270px;
	border: 1px dotted #ff0000;
}

button{
	background: #ff0000;
	padding: 5px 15px;
	color: #ffffff;
}